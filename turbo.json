{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "dev": {
      "dependsOn": ["^db:generate"],
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^db:generate", "^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "db:generate": {
      "cache": false
    },
    "lint": {
      "dependsOn": ["^typecheck","^db:generate"]
    },
    "migrate": {
      "cache": false
    },
    "typecheck": {
      "dependsOn": ["^db:generate"]
    }
  }
}
